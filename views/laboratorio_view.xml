<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- FORMULARIO -->
    <record id="view_laboratorio_form" model="ir.ui.view">
        <field name="name">optometria.laboratorio.form</field>
        <field name="model">optometria.laboratorio</field>
        <field name="arch" type="xml">
            <form string="Laboratorio">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_ver_productos" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-product-hunt">
                            <field name="total_productos" widget="statinfo" string="Productos"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ej: Essilor, Zeiss, Transitions..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Información de Contacto">
                            <field name="telefono" placeholder="+52 228 123 4567"/>
                            <field name="email" placeholder="ventas@laboratorio.com" widget="email"/>
                        </group>
                        <group string="Información Comercial">
                            <field name="dias_entrega"/>
                            <field name="activo" widget="boolean_toggle"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Notas">
                            <field name="notas" placeholder="Información adicional sobre este laboratorio..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- LISTA -->
    <record id="view_laboratorio_tree" model="ir.ui.view">
        <field name="name">optometria.laboratorio.tree</field>
        <field name="model">optometria.laboratorio</field>
        <field name="arch" type="xml">
            <tree string="Laboratorios">
                <field name="name"/>
                <field name="telefono"/>
                <field name="email" widget="email"/>
                <field name="dias_entrega"/>
                <field name="total_productos"/>
                <field name="activo" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    
    <!-- BÚSQUEDA/FILTROS -->
    <record id="view_laboratorio_search" model="ir.ui.view">
        <field name="name">optometria.laboratorio.search</field>
        <field name="model">optometria.laboratorio</field>
        <field name="arch" type="xml">
            <search string="Buscar Laboratorios">
                <field name="name"/>
                <field name="telefono"/>
                <field name="email"/>
                <filter string="Activos" name="activos" domain="[('activo', '=', True)]"/>
                <filter string="Inactivos" name="inactivos" domain="[('activo', '=', False)]"/>
            </search>
        </field>
    </record>
    
    <!-- ACCIÓN -->
    <record id="action_laboratorio" model="ir.actions.act_window">
        <field name="name">Laboratorios</field>
        <field name="res_model">optometria.laboratorio</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_activos': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear primer laboratorio
            </p>
            <p>
                Registra los laboratorios que te proveen lentes oftálmicas.
            </p>
        </field>
    </record>
    
    <!-- MENÚS -->
    <menuitem id="menu_optica_root"
              name="Óptica"
              sequence="10"/>
    
    <menuitem id="menu_optica_catalogos"
              name="Catálogos"
              parent="menu_optica_root"
              sequence="10"/>
    
    <menuitem id="menu_laboratorio"
              name="Laboratorios"
              parent="menu_optica_catalogos"
              action="action_laboratorio"
              sequence="10"/>
    
</odoo>